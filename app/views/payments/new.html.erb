<h1>Make a payment</h1>

<%= form_tag pledge_payments_path(@pledge), id: "server-form" do  %>
  <%= hidden_field_tag :stripe_token %>
<% end %>

<div class="stripe-errors"></div>
<%= form_tag "", id: "stripe-form" do %>
  <div class="form-group">
    <%= label_tag :card_number %>
    <%= text_field_tag :card_number, nil, class: "card-number form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :cvc %>
    <%= text_field_tag :cvc, nil, class: "card-cvc form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :expiry %>
    <%= select_month Date.today, {add_month_numbers: true}, {class: "card-expiry-month form-control"} %>
    <%= select_year(Date.today, {start_year: Time.now.year, end_year: Time.now.year + 10}, {class: "form-control card-expiry-year"})
 %>
  </div>
  <%= submit_tag "Submit", class: "btn btn-primary" %>
<% end %>
